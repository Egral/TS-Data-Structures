{
  "name": "ts-data-structures",
  "version": "0.0.1",
  "description": "Data Structures & Algorithms examples on Typescript",
  "main": "./dist/main.js",
  "repository": "git@github.com:Egral/TS-Data-Structures.git",
  "author": "Jos√© Solano",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "nodemon",
    "lint": "eslint --ignore-path .gitignore src --ext ts --ext js",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "prettier": "prettier --ignore-path .gitignore --write \"src/**/*.+(js|ts|json)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate:light": "npm-run-all --parallel type-check check-format lint",
    "validate": "npm-run-all --parallel type-check check-format lint build"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  }
}
